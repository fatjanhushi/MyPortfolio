<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/spotifyStreamer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Spotify streamer"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/scoresApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Scores App"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/libraryApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Library App"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buildItBigger"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Build It Bigger"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/myOwnApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Capstone: My own app"
        android:layout_weight="1"/>

</LinearLayout>
